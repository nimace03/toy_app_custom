<p id="notice"><%= notice %></p>

<h1 align="center"> Log in </h1>

<%= form_for(:session, :html => {class: "form-horizontal",role:"form"}, url: login_path) do |form| %>
  <div class="form-group text-center">
    <div class="control-label col-sm-2">
      <%= form.label :email %>
    </div>
    <div class="col-sm-8">
      <%= form.email_field :email,class:"form-control",placeholder: "Enter Email",autofocus:"true" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :password %>
    </div>
    <div class="col-sm-8">
      <%= form.password_field :password,class:"form-control",placeholder: "Enter Password",autofocus:"true" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
      <%= form.submit "Log In",class:"btn btn-primary btn-lg" %>
    </div>
  </div>
  <div class="col-sm-offset-4 col-sm-4">
      [ <%= link_to "Back to sign up page", users_path %> ]
  </div>
<% end %>