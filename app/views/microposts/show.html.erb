<p id="notice"><%= notice %></p>
<h2 align="center">
	<strong>Title : </strong>
	  <%= @micropost.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">
	<% if @micropost.user %>
		<ul class="listing">
			<div class="row center">
				<div class="col-md-4 col-md-offset-4">
					<li>Created By : </li>
					<li class="post-title">
						<%= link_to @micropost.user.name, user_path(@micropost.user) %>
					</li>
					<li>
						<small>
							<%= pluralize(@micropost.user.microposts.count," Post") if @micropost.user.microposts %>
						</small>
					</li>
				</div>
			</div>
		</ul>		
	<% end %>

	<h4 class="center description"><strong>Description : </strong></h4>
	<hr>
	<%= @micropost.content %>  
	<div class="post-actions">
		<% if logged_in? && (current_user == @micropost.user || current_user.admin?) %>
	        <%= link_to 'Edit this Post', edit_micropost_path(@micropost) , class: "btn btn-xs btn-primary" %>
			<%= link_to 'Delete ths Post', @micropost, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-xs btn-danger" %> 
		<% end %>
		<%= link_to 'View All Article', microposts_path, class: "btn btn-xs btn-success" %>
	</div>
</div>

