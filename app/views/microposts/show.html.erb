<p id="notice"><%= notice %></p>
<h2 align="center">
	<strong>Title of Post : </strong>
	  <%= @micropost.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="center description">
		<strong>
			Post by User No. : <%= @micropost.user_id %>
		</strong>
	</h4>	
	<h4 class="center description"><strong>Description : </strong></h4>
	<hr>
	<p>
		<%= @micropost.content %>  
	</p>
	
	<div class="post-actions">
		<%= link_to 'Edit this Post', edit_micropost_path(@micropost) , class: "btn btn-xs btn-primary" %>
		<%= link_to 'Delete ths Post', @micropost, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-xs btn-danger" %> 
		<%= link_to 'View All Article', microposts_path, class: "btn btn-xs btn-success" %>
	</div>
</div>

