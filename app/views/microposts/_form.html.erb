<%= form_with(model: micropost,:html => {class: "form-horizontal",role:"form"}, local: true) do |form| %>
  <% if micropost.errors.any? %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <div class="panel-title">
              <h2><%= pluralize(micropost.errors.count, "error") %> prohibited this posy from being saved</h2>
              <div class="panel-body">
              <ul>
                <% micropost.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :content %>
    </div>
    <div class="col-sm-8">
      <%= form.text_area :content,rows:10,class:"form-control",placeholder: "Content",autofocus:"true" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :user_id %>
    </div>
    <div class="col-sm-8">
      <%= form.number_field :user_id,class:"form-control",placeholder: "User ID",autofocus:"true"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
     <%= form.submit class:"btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
