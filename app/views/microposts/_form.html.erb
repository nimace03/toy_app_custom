<%= render 'shared/errors' , obj: @micropost %>
<%= form_with(model: micropost,:html => {class: "form-horizontal",role:"form"}, local: true) do |form| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :title %>
    </div>
    <div class="col-sm-8">
      <%= form.text_field :title,class:"form-control",placeholder: "Title",autofocus:"true" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :content %>
    </div>
    <div class="col-sm-8">
      <%= form.text_area :content,rows:10,class:"form-control",placeholder: "Content",autofocus:"true" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :user_id %>
    </div>
    <div class="col-sm-8">
      <%= form.number_field :user_id,class:"form-control",placeholder: "User ID",autofocus:"true"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-4">
     <%= form.submit class:"btn btn-primary btn-lg" %>
    </div>
  </div>

<% end %>
